package admin

import "github.com/go-fuego/fuego/examples/full-app-gourmet/templa/components"

templ htmlPage(title string, admin bool) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			@components.Head(title)
		</head>
		<body class="m-0 dark:bg-zinc-800 dark:text-white">
			<div class="flex flex-col md:flex-row">
				@AdminNavbar()
				<main id="page" class="container mx-auto p-4">
					{ children... }
				</main>
			</div>
			@components.Footer()
			@components.Scripts(components.ScriptsProps{
				Debug: false,
			})
		</body>
	</html>
}
